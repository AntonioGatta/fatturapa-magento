function parseChildren($el, $n, $mandatory = "") {

    foreach ($el as $k => $v) {
        $n .= "." . $k;

        if($k == "properties") $mandatory = "Y";

        if($k == "additionalProperties") $mandatory = "N";

        $type   = $v->type;
        $title  = $v->title;
