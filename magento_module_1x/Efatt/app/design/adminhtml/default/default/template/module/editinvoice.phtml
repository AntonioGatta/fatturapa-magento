function printInput($type, $title, $node, $k, $mandatory) {

        if($title == "") $title = $k;

        if($mandatory == "Y") {
            $border = " style='border-color: red;' ";
        } else {
            $border = "";
        }

        echo '<tr><td><label>' . $title . '</label></td></tr>';
        echo "<tr><td><input " . $border . " type='text' :value='" . $node . "'></td></tr>";
    
}

function printPanel($title, $k, $start = 'N') {
    $panelTitle = $k;
    if($start == 'N') {
        echo '</tbody>';
        echo '</div>';
        echo '</div>';
    }   
    echo '<div class="entry-edit">';
    echo '<div class="entry-edit-head collapseable">';
    echo '<strong>' . $panelTitle . '</strong>';
    echo '</div>';
    echo '<div class="fieldset">';
    echo '<p>' . $title . '</p>';
    echo '<table cellspacing="0" class="form-list">';
    echo '<tbody>';
}

function parseChildren($el, $n, $mandatory = "", $start = 'N') {

    foreach ($el as $k => $v) {
        $n .= "." . $k;

        if($k == "properties") {
            $mandatory = "Y";
        } 
        if($k == "additionalProperties") {
            $mandatory = "N";
        }

        $type   = $v->type;
        $title  = $v->title;
        //echo $n . " - " . $type . "<br>";
        if($type == "object") printPanel($title, $k, $start);

        if(isset($type) && $type != "object") {
            printInput($type, $title, $node, $k, $mandatory);
        }
        parseChildren($v, $k, $mandatory);
    }

}

foreach ($json as $k => $v) {

    parseChildren($v, $k, 'Y');
